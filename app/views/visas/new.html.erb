<div class="container mt-5">
  <%= render partial: "visas/shared/back_link_to_location_visa",
    locals: {
      location: @location
    }
  %>

  <h3>
    Adding a visa for <%= @country.name %>
  </h3>

  <% if flash[:error_save_visa].present? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= flash[:error_save_visa] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <%= form_for(
    [@country, @location, @visa],
    data: { turbo_frame: "_top" }
  ) do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Visa name" %>
      <%= f.text_field(
        :name,
        class: "form-control",
        placeholder: "Visitor visa exemption"
      ) %>
    </div>

    <div class="mb-3">
      <%= f.label :description %>
      <%= f.text_area(
        :description,
        class: "form-control",
        placeholder: "Enter the country for 90 days without a visa. 30 days extensions available by visiting the immigration office"
      ) %>
    </div>

    <%= f.submit "Add visa", class: "btn btn-success" %>
  <% end %>
</div>

<%
  set_meta_tags(
    index: false,
    follow: false
  )
%>
