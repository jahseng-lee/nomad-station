<%= render partial: "locations/header",
  locals: {
    location: @location,
  }
%>

<div class="container mt-3">
  <%= render partial: "locations/tabs",
    locals: {
      location: @location,
    }
  %>

  <%= render partial: "locations/show_location_alerts" %>

  <div class="row row-cols-1 row-cols-lg-2">
    <div class="col-12 col-lg-3">
      <div class="card mb-2">
        <div class="card-body">
          <% if @location.reviews.any? %>
            <div class="review-summary-row">
              <div>Overall:</div>

              <div class="rating">
                <%= helper_review_summary_star_rating(
                  location: @location,
                  review_field: :overall
                ) %>
              </div>
            </div>
            <div class="review-summary-row">
              <div>Fun:</div>

              <div class="rating">
                <%= helper_review_summary_star_rating(
                  location: @location,
                  review_field: :fun
                ) %>
              </div>
            </div>
            <div class="review-summary-row">
              <div>Cost:</div>

              <div class="rating">
                <%= helper_review_summary_star_rating(
                  location: @location,
                  review_field: :cost
                ) %>
              </div>
            </div>
            <div class="review-summary-row">
              <div>Internet:</div>

              <div class="rating">
                <%= helper_review_summary_star_rating(
                  location: @location,
                  review_field: :internet
                ) %>
              </div>
            </div>
            <div class="review-summary-row">
              <div>Safety:</div>

              <div class="rating">
                <%= helper_review_summary_star_rating(
                  location: @location,
                  review_field: :safety
                ) %>
              </div>
            </div>

          <% else %>
            No reviews for <%= @location.name_utf8 %> yet
          <% end %>
        </div>
      </div>

      <% if @location.has_emergency_numbers? %>
        <div class="card d-none d-lg-block d-xl-block d-xxl-block mb-3">
          <div class="card-body">
            <p class="fs-5 fw-bold mb-1">Emergency numbers</p>

            <% @location.emergency_numbers.each do |emergency_number| %>
              <div class="emergency-number">
                <span><%= emergency_number[:name].capitalize %>:</span>
                <span class="fw-bold">
                  <%= emergency_number[:number] %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <hr class="d-lg-none my-4">

    <div class="col-12 col-lg-9">
      <% if current_user&.admin? %>
        <div class="mb-3">
          <%= link_to(
            upload_banner_image_modal_location_path(@location),
            "data-turbo-stream": "",
          ) do %>
            <% if @location.banner_image.present? %>
              <i class="bi bi-pencil-fill" aria-hidden="true"></i>
              Update banner image
            <% else %>
              <i class="bi bi-plus-circle-fill" aria-hidden="true"></i>
              Add banner image
            <% end %>
          <% end %>

          <%= link_to edit_location_path(@location), class: "ms-3" do %>
            <i class="bi bi-pencil-fill" aria-hidden="true"></i>
            Update location
          <% end %>
        </div>
      <% end %>

      <%= @markdown.render(
        helper_location_description(location: @location)
      ).html_safe %>
    </div>
  </div>
</div>

<%
  set_meta_tags(
    title: "#{@location.name_utf8}, #{@location.country.name}",
    description: helper_location_short_description(location: @location),
    index: true,
    follow: true
  )
%>
