<%= turbo_frame_tag "upload-banner-image-modal" do %>
  <div
      class="modal"
      tabindex="-1"
      data-controller="modal"
      data-modal-target="modal"
      >
    <div class="modal-dialog">
      <div class="modal-content">

        <%= form_for(
          [location, banner_image],
          data: { turbo: false }
        ) do |f| %>
          <div class="modal-header">
            <h1 class="modal-title fs-5">Upload banner image</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= f.hidden_field(
              :image,
              value: banner_image.cached_image_data,
              id: nil
            ) %>

            <div class="mb-3">
              <%= f.file_field :image, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :image_credit, class: "form-label" %>
              <%= f.text_field(
                :image_credit,
                class: "form-control",
                placeholder: 'Photo by <a href="https://unsplash.com/...'
              ) %>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit(
              "Upload",
              class: "btn btn-primary"
            ) %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
<% end %>
